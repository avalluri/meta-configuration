{{$ssh_conf := "/common/devel/ssh"}}
{{$source := include "/lib/systemd/system/sshd.socket.d/openssh-ipv4.conf"}}

{{if (ne $source "")}}
     #
     # generated by confd
     # do not edit
     #
     {{if exists $ssh_conf}}
         {{$ssh := json (getv $ssh_conf)}}
	 {{$port := integerValue $ssh.port 22}}
     	 {{regReplace $source "--dport([ \t]+[sh0-9]+)" (printf "--dport %v" $port)}}
    {{else}}
	 {{$source}}
    {{end}}
{{end}}
